<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/path_background"
    android:padding="12dp"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/playlistTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Playlist Title"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/playlistStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ðŸŸ¢ Active"
            android:textColor="#cccccc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lastSyncText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last sync: Never"
            android:textColor="#888888"
            android:textSize="12sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#3498db"
        android:textSize="12sp"
        android:layout_marginBottom="4dp"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/syncProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:progressTint="#3498db"
        android:progressBackgroundTint="#333333" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/syncButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="ðŸ”„ Sync Now"
            android:backgroundTint="#3498db"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/removeButton"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:text="ðŸ—‘ï¸ Remove"
            android:backgroundTint="#e74c3c"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_marginStart="4dp" />

    </LinearLayout>

</LinearLayout>